<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_movie_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.tudorsirbu.popularmovies.MovieDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/header">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:adjustViewBounds="true"
            android:id="@+id/movie_poster"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:id="@+id/overview"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="16dp"
        android:text="@string/released_on"
        android:id="@+id/released_on_header"
        android:textSize="16sp"
        android:textStyle="bold"
      />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/released_on_header"
        android:text="@string/released_on"
        android:id="@+id/released_on"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/released_on"
        android:layout_marginTop="16dp"
        android:text="@string/average_rating"
        android:id="@+id/vote_average_header"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vote_average_header"
        android:text="@string/released_on"
        android:id="@+id/vote_average"
        />
</RelativeLayout>
